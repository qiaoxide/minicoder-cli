{
  "name": "minicoder-cli",
  "version": "0.1.0",
  "description": "A CLI tool for coding, writing, and thinking notes",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mini": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "fmt": "prettier --write src",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cli",
    "ai",
    "gemini",
    "coding"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.7.4",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "figures": "^6.1.0",
    "highlight.js": "^11.11.1",
    "ink": "^6.6.0",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "marked": "^17.0.1",
    "ora": "^9.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "undici": "^7.16.0"
  }
}
